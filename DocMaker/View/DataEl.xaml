<UserControl x:Class="DocMaker.View.DataEl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DocMaker.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
     <Border
                    Background="{Binding Background}"
                    BorderBrush="{Binding BorderBrush}"
                    BorderThickness="{Binding BorderThickness}"
                        MinHeight="50">

                        <Grid >
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="{Binding Exam}" FontSize="14" TextWrapping="Wrap" Grid.Column="0" Background="{Binding Background}" Margin="2, 0"/>
                            <TextBox Text="{Binding Result}" FontSize="14" TextWrapping="Wrap" Grid.Column="1" Background="{Binding Background}" Margin="2, 0"/>
                            <GridSplitter Grid.Column="1" HorizontalAlignment="Left" Background="Black" Width="3"/>
                        </Grid>
                    </Border>
</UserControl>
